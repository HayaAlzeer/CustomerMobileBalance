<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchByName">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <TableRow
            android:id="@+id/tableRowd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="100px"
            android:paddingTop="100px">

            <TextView
                android:id="@+id/textView"
                android:layout_height="wrap_content"
                android:text="ادخل الاسم  "
                android:textSize="24sp"
                android:layout_weight="1" android:layout_width="match_parent" android:gravity="center_horizontal"/>



        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          >


            <EditText
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:ems="30"
                android:gravity="center_horizontal"
                android:hint="الاسم الأول "
                android:paddingLeft="20dp"
                android:paddingRight="20dp"


                />
          <!--  android:background="@drawable/back" -->

        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <EditText
                android:id="@+id/sname"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:layout_width="match_parent" android:gravity="center_horizontal"
                android:ems="10"
                android:hint="اسم الأب "

                android:paddingRight="20dp"
                android:paddingLeft="20dp"


                />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >


            <EditText
                android:id="@+id/thname"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:layout_width="match_parent" android:gravity="center_horizontal"
                android:ems="10"
                android:hint="اسم الجد "

                android:paddingRight="20dp"
                android:paddingLeft="20dp"


                 />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

         >


            <EditText
                android:id="@+id/foname"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:layout_width="match_parent" android:gravity="center_horizontal"
                android:ems="10"
                android:hint="اسم العائلة "
                android:paddingRight="20dp"
                android:paddingLeft="20dp"


               />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="DuplicateIds"
            android:paddingTop="60dp"

            >

            <Button
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="بحث"
                android:backgroundTint="@color/green"

                android:textSize="30sp"
                android:textStyle="bold" />

        </TableRow>




        <TextView
            android:id="@+id/idTVResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textAlignment="center"
            android:textSize="15sp" />

    </TableLayout>







</LinearLayout>